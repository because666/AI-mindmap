# DeepMindMap Server Configuration
# Copy this file to .env and update the values as needed

# Server Configuration
PORT=3001
HOST=localhost

# Neo4j Configuration
# Using Docker Compose defaults:
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=deepmindmap123
NEO4J_DATABASE=neo4j

# MongoDB Configuration
# Using Docker Compose defaults:
MONGODB_URI=mongodb://admin:deepmindmap123@localhost:27017/deepmindmap?authSource=admin
MONGODB_DATABASE=deepmindmap

# Vector Database Configuration
# Options: memory, pinecone, weaviate
VECTOR_PROVIDER=memory
VECTOR_DIMENSION=1536
VECTOR_INDEX=deepmindmap_vectors

# AI Configuration
# Default provider: zhipu, openai, anthropic
DEFAULT_PROVIDER=zhipu

# Zhipu AI Configuration (default)
# Get your API key from: https://open.bigmodel.cn/
ZHIPU_API_KEY=86caae47a88e4ca48af7fab4e5991e30.BK5mPaWKGKgALsla
DEFAULT_MODEL=glm-4-flash

# OpenAI Configuration (optional)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-3-small

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
